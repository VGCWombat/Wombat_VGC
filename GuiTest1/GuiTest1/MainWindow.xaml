<Window x:Class="GuiTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized" WindowStyle="None">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <Menu VerticalAlignment="Top">
                <MenuItem Header="Plik">
                    <MenuItem Header="Nowy"/>
                    <MenuItem Header="Otwórz"/>
                    <MenuItem Header="Zapisz"/>
                    <Separator/>
                    <MenuItem Header="Zamknij"/>
                </MenuItem>
                <MenuItem Header="Pomoc"/>
            </Menu>
        </Menu>


        <StatusBar Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Label>VGC</Label>
            <Separator/>
            <Label>Status:</Label>
            <Label Name="status">Offline</Label>
        </StatusBar>




    </Grid>
</Window>
